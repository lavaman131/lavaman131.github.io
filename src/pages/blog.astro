---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../config";
import BlogCard from "../components/BlogCard.astro";
import { getCollection } from "astro:content";
import BlogHeroCard from "../components/blog/BlogHeroCard.astro";
import BlogSubscribe from "../components/blog/BlogSubscribe.astro";

const allBlogs = await getCollection("blog");
// sort blogs by date
allBlogs.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout title={`Blog | ${SITE_TITLE}`}>
  <Fragment slot="head">
    <meta name="follow.it-verification-code" content="tDHuv1ebB7hn7gCq1z4b" />
  </Fragment>
  <Fragment slot="main">
    <div class="w-full min-w-96 mx-auto">
      <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="blog-layout">
          <!-- Sidebar: Hero + Subscribe -->
          <aside class="blog-sidebar">
            <BlogHeroCard />
            <BlogSubscribe />
          </aside>

          <!-- Blogs Grid -->
          <div class="blog-grid">
            {
              allBlogs.map((blog) => (
                <BlogCard
                  href={`/blog/${blog.slug}`}
                  title={blog.data.title}
                  date={blog.data.date}
                  authors={blog.data.authors}
                  description={blog.data.description}
                />
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </Fragment>
</Layout>

<style>
  /* Mobile-first: stacked layout */
  .blog-layout {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  /* Medium screens: 2-column grid */
  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Large screens: side-by-side layout */
  @media (min-width: 1024px) {
    .blog-layout {
      flex-direction: row;
      align-items: flex-start;
      gap: 2.5rem;
    }

    .blog-sidebar {
      width: 22rem;
      flex-shrink: 0;
      position: sticky;
      top: 5rem;
    }
  }

</style>
