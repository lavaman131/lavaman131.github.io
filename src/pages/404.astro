---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../config";
const errorCode = `CUDAError: out of memory
Did you try?
- Reducing batch size
- Using a smaller model
- Offloading the model to a CPU
- Checking for a memory leak
- Sacrificing a rubber duck to the CUDA Gods ðŸ¦†
`;
---

<Layout title={`404 | ${SITE_TITLE}`}>
  <section
    slot="main"
    class="flex flex-col items-center justify-center min-h-[70vh] max-w-2xl mx-auto px-4"
  >
    <div class="w-full text-left">
      <h1 class="text-5xl font-bold text-ctp-red mb-6">
        Error 404: CUDA Out of Memory
      </h1>
      <p class="text-xl mb-8 text-ctp-subtext1">
        Oops! It looks like our GPU ran out of VRAM trying to find this page.
      </p>
      <div class="w-full max-w-xl">
        <div class="rounded-lg overflow-hidden">
          <pre class="m-0 p-0"><code>{errorCode}</code></pre>
        </div>
      </div>
      <p class="mt-8 text-lg">
        Don't worry, you can still head back to the
        <a
          href="/"
          class="text-ctp-teal hover:text-ctp-sapphire underline transition-catppuccin"
          >homepage</a
        >.
      </p>
    </div>
  </section>
</Layout>
