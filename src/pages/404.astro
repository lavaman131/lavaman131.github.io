---
import PageLayout from "../layouts/PageLayout.astro";
import { SITE_TITLE } from "../config";
import PageMeta from "../components/PageMeta.astro";
import CodeBlock from "../components/CodeBlock.astro";

const errorCode = `CUDAError: out of memory
Try:
- Reducing batch size
- Using a smaller model
- Offloading the model to a CPU
- Checking for a memory leak 
- Sacrificing a rubber duck to the CUDA Gods`;
---

<PageLayout>
  <PageMeta title={`404 | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
		<h1 class="text-4xl font-bold text-red-600 mb-4">Error 404: CUDA Out of Memory</h1>
		<p class="text-xl mb-6">Oops! It looks like our GPU ran out of VRAM trying to find this page.</p>
			<CodeBlock language="text" content={errorCode} />
		<p class="mt-6">Don't worry, you can still head back to the <a href="/">homepage</a>.</p>
  </section>
</PageLayout>
