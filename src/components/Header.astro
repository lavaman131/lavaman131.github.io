---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
import { TWITTER_HANDLE } from "../config";
---

<header class="flex justify-between items-center">
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div class="flex items-center gap-4 text-text-bold">
    <a
      class="unset text-xl hover:text-text-link"
      href="https://github.com/lavaman131"
    >
      <i class="fa-brands fa-github" aria-hidden="true" title="Alex on GitHub"
      ></i>
      <span class="fa-sr-only">Alex on GitHub</span>
    </a>
    <a
      class="unset text-xl hover:text-text-link"
      href={`https://twitter.com/${TWITTER_HANDLE}`}
    >
      <i class="fa-brands fa-twitter" aria-hidden="true" title="Alex on Twitter"
      ></i>
      <span class="fa-sr-only">Alex on Twitter</span>
    </a>
    <DarkModeToggle />
  </div>
</header>

