---
interface Props {
  title: string;
  href: string;
  date: string;
  authors: string;
  description?: string;
}

const { href, title, date, authors, description } = Astro.props;

// Format date for display
const formatDate = (dateString: string) => {
  // Parse the date string manually to avoid timezone issues
  const [year, month, day] = dateString.split("-").map(Number);
  const date = new Date(year, month - 1, day); // month is 0-indexed in JS
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<div
  class="group h-full flex flex-col bg-ctp-mantle/50 backdrop-blur-sm rounded-xl border border-ctp-surface0/50 hover:shadow-lg hover:shadow-ctp-surface0/20 hover:-translate-y-0.5 transition-all duration-500 hover:border-ctp-mauve/40 overflow-hidden hover:bg-ctp-mantle/80"
>
  <a
    href={href}
    class="unset flex flex-col h-full text-ctp-text no-underline p-6"
  >
    <!-- Content Container -->
    <div class="flex flex-col flex-1 space-y-4">
      <!-- Title -->
      <h3
        class="text-xl font-medium text-ctp-text leading-snug line-clamp-2 group-hover:text-ctp-mauve transition-all duration-300 tracking-tight"
      >
        {title}
      </h3>

      <!-- Description -->
      <div class="flex-1">
        <p
          class="text-sm text-ctp-subtext1 line-clamp-3 leading-relaxed font-light"
        >
          {
            description ||
              "Discover insights and perspectives on the latest developments in technology, research, and innovation."
          }
        </p>
      </div>

      <!-- Author and Date -->
      <div
        class="flex items-center justify-between text-xs text-ctp-subtext0 pt-4 mt-auto border-t border-ctp-surface0/30"
      >
        <div class="flex items-center space-x-2">
          {authors && <span class="font-medium tracking-wide">{authors}</span>}
        </div>
        <div class="flex items-center space-x-2">
          <span class="font-medium text-ctp-overlay1 tracking-wide"
            >{formatDate(date)}</span
          >
        </div>
      </div>
    </div>
  </a>
</div>
