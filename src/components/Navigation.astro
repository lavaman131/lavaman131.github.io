---
import HeaderLink from "./HeaderLink.astro";
import { LINKEDIN_HANDLE } from "../config";
import { Icon } from "astro-icon/components";
import ThemeIcon from "./ThemeIcon.astro";
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-ctp-base px-4 sm:px-6 md:px-8 lg:px-12 border-b border-ctp-surface0 h-16 min-w-96 transition-catppuccin"
>
  <div class="mx-auto flex justify-between items-center h-full max-w-7xl">
    <nav>
      <section class="text-ctp-text">
        <ul class="unset flex gap-4 sm:gap-6 md:gap-8 [&>li]:p-0">
          <li><HeaderLink href="/">Home</HeaderLink></li>
          <li><HeaderLink href="/projects">Projects</HeaderLink></li>
          <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        </ul>
      </section>
    </nav>
    <div class="flex items-center gap-3 sm:gap-4 md:gap-5 text-ctp-text">
      <a
        class="unset flex items-center justify-center w-10 h-10 rounded-lg hover:bg-ctp-surface0 hover:text-ctp-mauve transition-catppuccin group"
        href="https://github.com/lavaman131"
        aria-label="GitHub Profile"
      >
        <Icon
          name="fa-brands:github"
          class="w-5 h-5 group-hover:scale-110 transition-transform duration-200"
        />
      </a>
      <a
        class="unset flex items-center justify-center w-10 h-10 rounded-lg hover:bg-ctp-surface0 hover:text-ctp-mauve transition-catppuccin group"
        href={`https://linkedin.com/in/${LINKEDIN_HANDLE}`}
        aria-label="LinkedIn Profile"
      >
        <Icon
          name="fa-brands:linkedin"
          class="w-5 h-5 group-hover:scale-110 transition-transform duration-200"
        />
      </a>
      <a
        class="unset flex items-center justify-center w-10 h-10 rounded-lg hover:bg-ctp-surface0 hover:text-ctp-mauve transition-catppuccin group"
        href="/Alex_Lavaee_CV.pdf"
        aria-label="Download CV"
      >
        <Icon
          name="fa-solid:file-pdf"
          class="w-5 h-5 group-hover:scale-110 transition-transform duration-200"
        />
      </a>
      <ThemeIcon />
    </div>
  </div>
</header>
