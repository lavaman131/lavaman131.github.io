---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { SITE_URL } from "../config";
interface Props {
  title: string;
  href: string;
  image: ImageMetadata;
  date?: string;
  authors?: string;
  source?: string;
  githubUrl?: string;
  paperUrl?: string;
}

const { href, title, image, githubUrl, paperUrl } = Astro.props;
---

<div
  class="group h-full flex flex-col bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden"
>
  <a
    href={href}
    class="flex flex-col h-full text-gray-900 dark:text-white no-underline"
  >
    <!-- Image Container -->
    <div class="relative w-full aspect-[16/10] overflow-hidden">
      <Image
        src={image}
        alt={title}
        class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
      />
      <!-- Gradient overlay for better text readability -->
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
      </div>
    </div>

    <!-- Content Container -->
    <div class="flex flex-col flex-1 p-6 space-y-4">
      <h3
        class="text-sm lg:text-base font-semibold text-gray-900 dark:text-white leading-tight line-clamp-2"
      >
        {title}
      </h3>

      <!-- Action Links -->
      <div class="flex items-center justify-end gap-4 mt-auto pt-2">
        {
          githubUrl && (
            <a
              href={githubUrl}
              class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200 no-underline"
              target="_blank"
              rel="noopener noreferrer"
              onclick="event.stopPropagation()"
            >
              <Icon name="fa-brands:github" class="w-5 h-5" />
              <span class="text-sm font-medium">Code</span>
            </a>
          )
        }
        {
          paperUrl && (
            <a
              href={paperUrl}
              class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors duration-200 no-underline"
              target="_blank"
              rel="noopener noreferrer"
              onclick="event.stopPropagation()"
            >
              <Icon name="fa-solid:file-pdf" class="w-5 h-5" />
              <span class="text-sm font-medium">Paper</span>
            </a>
          )
        }
      </div>
    </div>
  </a>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
