---
import { Image } from "astro:assets";
import blogHeroImage from "../../assets/images/blog/profile.png";

interface Props {
  /** URL to the Atomic GitHub repository */
  href?: string;
}

const { href = "https://github.com/flora131/atomic" } = Astro.props;
---

<div class="hero-card">
  <!-- Title bar with macOS-style dots -->
  <div class="hero-titlebar">
    <div class="hero-dots">
      <span class="dot dot-red"></span>
      <span class="dot dot-yellow"></span>
      <span class="dot dot-green"></span>
    </div>
    <span class="hero-title">atomic</span>
  </div>

  <!-- Card body -->
  <div class="hero-body">
    <!-- Hero image -->
    <div class="hero-prompt">
      <span class="prompt-symbol">$</span>
      <span class="prompt-cmd">imgcat moe.png</span>
    </div>
    <div class="hero-image-wrapper">
      <Image
        src={blogHeroImage}
        alt="Mixture of Experts â€” with Alex & Norin Lavaee"
        class="hero-image"
        width={1024}
        height={1024}
      />
    </div>

    <!-- Atomic info -->
    <div class="hero-prompt">
      <span class="prompt-symbol">$</span>
      <span class="prompt-cmd">atomic --help</span>
    </div>
    <div class="hero-output">
      <p>
        <strong>Atomic</strong> &mdash; Understand and research any codebase.
        Plan complex features. Ship them autonomously.
        <a href={href} target="_blank" rel="noopener noreferrer">Try it out</a>
        &mdash; PRs welcome.
      </p>
    </div>
    <!-- RSS feed -->
    <div class="hero-prompt">
      <span class="prompt-symbol">$</span>
      <span class="prompt-cmd">curl -s alexlavaee.me/rss.xml</span>
    </div>
    <div class="hero-output">
      <p>
        &lt;?xml version="1.0"?&gt; &lt;channel&gt;<strong>Mixture of Experts</strong>&lt;/channel&gt;
        &mdash; <a href="/rss.xml" target="_blank" rel="noopener noreferrer">RSS</a>
      </p>
    </div>
  </div>
</div>

<style>
  .hero-card {
    max-width: 100%;
    margin: 0 auto;
    border: 1px solid var(--ctp-surface0, #313244);
    border-radius: 0.75rem;
    overflow: hidden;
    background: var(--ctp-mantle, #181825);
    transition:
      border-color 0.3s ease,
      background-color 0.3s ease;
  }

  .hero-card:hover {
    border-color: var(--ctp-surface1, #45475a);
  }

  /* Title bar */
  .hero-titlebar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 1rem;
    background: var(--ctp-base, #1e1e2e);
    border-bottom: 1px solid var(--ctp-surface0, #313244);
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }

  .hero-dots {
    display: flex;
    gap: 0.375rem;
  }

  .dot {
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 50%;
  }

  .dot-red {
    background: var(--ctp-red, #f38ba8);
  }
  .dot-yellow {
    background: var(--ctp-yellow, #f9e2af);
  }
  .dot-green {
    background: var(--ctp-green, #a6e3a1);
  }

  .hero-title {
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas,
      "Liberation Mono", monospace;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--ctp-subtext0, #a6adc8);
    letter-spacing: 0.025em;
    transition: color 0.3s ease;
  }

  /* Body */
  .hero-body {
    padding: 1.25rem 1.25rem 1rem;
  }

  /* Image */
  .hero-image-wrapper {
    display: flex;
    justify-content: center;
    padding: 0.5rem 0 1.25rem;
  }

  .hero-image {
    width: 100%;
    max-width: 12rem;
    aspect-ratio: 1;
    border-radius: 1rem;
    object-fit: cover;
    border: 2px solid var(--ctp-surface0, #313244);
    transition: border-color 0.3s ease;
  }

  /* Prompt line */
  .hero-prompt {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas,
      "Liberation Mono", monospace;
    font-size: 0.875rem;
  }

  .prompt-symbol {
    color: var(--ctp-green, #a6e3a1);
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .prompt-cmd {
    color: var(--ctp-text, #cdd6f4);
    transition: color 0.3s ease;
  }

  /* Output text */
  .hero-output {
    padding-left: 1.25rem;
    border-left: 2px solid var(--ctp-surface0, #313244);
    margin-bottom: 1rem;
    transition: border-color 0.3s ease;
  }

  .hero-output p {
    font-size: 0.8125rem;
    line-height: 1.6;
    color: var(--ctp-subtext1, #bac2de);
    margin: 0;
    transition: color 0.3s ease;
  }

  .hero-output p + p {
    margin-top: 0.625rem;
  }

  .hero-output strong {
    color: var(--ctp-text, #cdd6f4);
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .hero-output a {
    color: var(--ctp-blue, #89b4fa);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .hero-output a:hover {
    color: var(--ctp-sky, #89dceb);
    text-decoration: underline;
  }

  /* Bottom link line */
  .hero-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas,
      "Liberation Mono", monospace;
    font-size: 0.8125rem;
  }

  .hero-link a {
    color: var(--ctp-blue, #89b4fa);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .hero-link a:hover {
    color: var(--ctp-sky, #89dceb);
    text-decoration: underline;
  }

  /* Light theme overrides */
  :global([data-theme="latte"]) .hero-card {
    border-color: var(--ctp-surface0, #ccd0da);
    background: var(--ctp-mantle, #e6e9ef);
  }

  :global([data-theme="latte"]) .hero-card:hover {
    border-color: var(--ctp-surface1, #bcc0cc);
  }

  :global([data-theme="latte"]) .hero-titlebar {
    background: var(--ctp-base, #eff1f5);
    border-color: var(--ctp-surface0, #ccd0da);
  }

  :global([data-theme="latte"]) .hero-title {
    color: var(--ctp-subtext0, #6c6f85);
  }

  :global([data-theme="latte"]) .hero-image {
    border-color: var(--ctp-surface0, #ccd0da);
  }

  :global([data-theme="latte"]) .prompt-symbol {
    color: var(--ctp-green, #40a02b);
  }

  :global([data-theme="latte"]) .prompt-cmd {
    color: var(--ctp-text, #4c4f69);
  }

  :global([data-theme="latte"]) .hero-output {
    border-color: var(--ctp-surface0, #ccd0da);
  }

  :global([data-theme="latte"]) .hero-output p {
    color: var(--ctp-subtext1, #5c5f77);
  }

  :global([data-theme="latte"]) .hero-output strong {
    color: var(--ctp-text, #4c4f69);
  }

  :global([data-theme="latte"]) .hero-output a {
    color: var(--ctp-blue, #1e66f5);
  }

  :global([data-theme="latte"]) .hero-output a:hover {
    color: var(--ctp-sky, #04a5e5);
  }

  :global([data-theme="latte"]) .hero-link a {
    color: var(--ctp-blue, #1e66f5);
  }

  :global([data-theme="latte"]) .hero-link a:hover {
    color: var(--ctp-sky, #04a5e5);
  }
</style>
