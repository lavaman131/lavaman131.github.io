// Standalone email subscribe section for the blog listing page.
// Uses follow.it for email delivery â€” styled to match Catppuccin theme.
---

<div class="blog-subscribe">
  <div class="subscribe-heading">
    <span class="subscribe-icon" aria-hidden="true">&#9993;</span>
    <h2 class="subscribe-title">Stay in the loop</h2>
  </div>
  <p class="subscribe-desc">New posts delivered to your inbox. No spam, unsubscribe anytime.</p>

  <form
    class="subscribe-form"
    action="https://api.follow.it/subscription-form/bG4wYmtTMWs5M2hlRjFHdjdZS3JLZXdObFVJZzRiZnArMEladjhoajlnUXNIcXZnMjZlRVo4RjJ1UHBVaE9JWHNqZHVrUnk3TkhGM1VsMkNYekJzRktRY2wzdHdoYW1UaUJET3QydWsxVnlkUFQ0RzBuSVQ2a01kaWNQVWthaEd8VlhSaDJSR282aGdtNXJjc1cwemdJZFdKaTc0WUl5QmxrbEkrZ1lPTTVhaz0=/21"
    method="post"
  >
    <div class="subscribe-input-row">
      <input
        type="email"
        name="email"
        required
        placeholder="you@example.com"
        autocomplete="email"
        class="subscribe-input"
      />
      <button type="submit" class="subscribe-button">Subscribe</button>
    </div>
  </form>
</div>

<style>
  .blog-subscribe {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.5rem 1.5rem 1.25rem;
    border: 1px solid var(--ctp-surface0, #313244);
    border-radius: 0.75rem;
    background: var(--ctp-mantle, #181825);
    text-align: center;
    transition:
      border-color 0.3s ease,
      background-color 0.3s ease;
  }

  .blog-subscribe:hover {
    border-color: var(--ctp-surface1, #45475a);
  }

  .subscribe-heading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .subscribe-icon {
    font-size: 1.125rem;
    color: var(--ctp-mauve, #cba6f7);
    transition: color 0.3s ease;
  }

  .subscribe-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--ctp-text, #cdd6f4);
    margin: 0;
    transition: color 0.3s ease;
  }

  .subscribe-desc {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--ctp-subtext0, #a6adc8);
    margin: 0.375rem 0 1rem;
    transition: color 0.3s ease;
  }

  .subscribe-form {
    width: 100%;
  }

  .subscribe-input-row {
    display: flex;
    gap: 0.5rem;
    max-width: 28rem;
    margin: 0 auto;
  }

  .subscribe-input {
    flex: 1;
    min-width: 0;
    height: 2.5rem;
    padding: 0 0.75rem;
    border: 1px solid var(--ctp-surface1, #45475a);
    border-radius: 0.5rem;
    background: var(--ctp-base, #1e1e2e);
    color: var(--ctp-text, #cdd6f4);
    font-size: 0.875rem;
    font-family: inherit;
    outline: none;
    transition:
      border-color 0.2s ease,
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .subscribe-input::placeholder {
    color: var(--ctp-overlay0, #6c7086);
    transition: color 0.3s ease;
  }

  .subscribe-input:focus {
    border-color: var(--ctp-mauve, #cba6f7);
    box-shadow: 0 0 0 2px rgba(203, 166, 247, 0.15);
  }

  .subscribe-button {
    flex-shrink: 0;
    height: 2.5rem;
    padding: 0 1.25rem;
    border: none;
    border-radius: 0.5rem;
    background: var(--ctp-mauve, #cba6f7);
    color: var(--ctp-base, #1e1e2e);
    font-size: 0.875rem;
    font-weight: 600;
    font-family: inherit;
    cursor: pointer;
    transition:
      background-color 0.2s ease,
      color 0.3s ease,
      transform 0.1s ease;
  }

  .subscribe-button:hover {
    background: var(--ctp-pink, #f5c2e7);
  }

  .subscribe-button:active {
    transform: scale(0.97);
  }

  /* Responsive: stack on small screens */
  @media (max-width: 480px) {
    .subscribe-input-row {
      flex-direction: column;
    }

    .subscribe-button {
      width: 100%;
    }
  }

  /* Light theme overrides */
  :global([data-theme="latte"]) .blog-subscribe {
    border-color: var(--ctp-surface0, #ccd0da);
    background: var(--ctp-mantle, #e6e9ef);
  }

  :global([data-theme="latte"]) .blog-subscribe:hover {
    border-color: var(--ctp-surface1, #bcc0cc);
  }

  :global([data-theme="latte"]) .subscribe-icon {
    color: var(--ctp-mauve, #8839ef);
  }

  :global([data-theme="latte"]) .subscribe-title {
    color: var(--ctp-text, #4c4f69);
  }

  :global([data-theme="latte"]) .subscribe-desc {
    color: var(--ctp-subtext0, #6c6f85);
  }

  :global([data-theme="latte"]) .subscribe-input {
    border-color: var(--ctp-surface1, #bcc0cc);
    background: var(--ctp-base, #eff1f5);
    color: var(--ctp-text, #4c4f69);
  }

  :global([data-theme="latte"]) .subscribe-input::placeholder {
    color: var(--ctp-overlay0, #9ca0b0);
  }

  :global([data-theme="latte"]) .subscribe-input:focus {
    border-color: var(--ctp-mauve, #8839ef);
    box-shadow: 0 0 0 2px rgba(136, 57, 239, 0.15);
  }

  :global([data-theme="latte"]) .subscribe-button {
    background: var(--ctp-mauve, #8839ef);
    color: var(--ctp-base, #eff1f5);
  }

  :global([data-theme="latte"]) .subscribe-button:hover {
    background: var(--ctp-pink, #ea76cb);
  }
</style>
